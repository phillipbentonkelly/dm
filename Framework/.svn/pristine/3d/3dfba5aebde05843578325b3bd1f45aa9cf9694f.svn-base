<p:currentObject content="story" metadata="meta"
	webType="webtype" />
<p:out var="metaCommentsEnabled"
	xvalue="$meta//OnlineProducts/OnlineProduct[child::ProductName='Boston.com']/CommentingEnabled" />

<div id="comments" class="story-width story-comments closed">
	<div class="l-story-txt no-flow clearfix">
