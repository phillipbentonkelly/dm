				<!--div class="loading-message" id="loading-comments">
					Loading comments...
				</div-->
			</div><!-- / #comments -->
		</section><!-- / .story-comments-mod -->
	</div><!-- / .l-story-txt -->
</div><!-- / #story-comments -->