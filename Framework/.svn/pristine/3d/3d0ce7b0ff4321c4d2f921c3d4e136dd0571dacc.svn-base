/* love letters styles */
.q {
  background: transparent url(/img/qa_question.gif) no-repeat 50% 50%;
}
.a {
  background: transparent url(/img/qa_answer.gif) no-repeat 50% 50%;
  font-size: 46px;
  line-height: 41px;
}
.q, .a{
  font: bold 40px/31px Georgia;
  color: #d2232a;
  margin-right: 10px;
  float: left;
  display: block;
  text-indent: -9000px;
  width: 35px;
  height: 40px;
}
.question, .answer {
	margin-bottom: 35px;
	margin-top: 35px;
  clear: right;
}
.signature {
	font-weight: bold;
	font-style: italic;
	color: #000;
}


