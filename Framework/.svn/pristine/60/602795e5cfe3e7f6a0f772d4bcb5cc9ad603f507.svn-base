/*  --------------------------------------------------------------------------
* Modal Window
*/
.ugc-modal {
  z-index: 999;
  position: fixed;
  top: 90px;
  left: 25%;
  width: 50%;
  padding: 20px;
  padding-bottom: 10px;
  background: #fff;
  border: 3px solid $blue;
  box-shadow: 0 0 50px rgba(0,0,0, .5);
  .heading {
    font-size: 16px;
    border-bottom: 1px solid $black-15;
    margin-bottom: 10px;
    padding-bottom: 5px;
  }
  .form-section {
    margin-bottom: 10px;
    overflow: hidden;
    padding-bottom: 0;
  }
  label {
    display: inline-block;
    width: 100px;
  }
  &.abuse label {
    display: block;
    width: 100%;
    margin-bottom: 3px;
  }
  input[type=text],
  textarea {
    width: 100%;
    padding: 3px 5px;
    border: 1px solid $black-15;
  }
  textarea {
    height: 100px;
  }
  select {
    width: 100%;
  }
  a.close-modal {
    float: right;
    font-size: 18px;
    &:hover {
      text-decoration: none;
      border-bottom: none;
    }
  }
}
