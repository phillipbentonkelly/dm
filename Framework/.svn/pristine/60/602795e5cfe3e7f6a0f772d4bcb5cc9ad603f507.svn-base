/* ============================================= */

/*	Homepage						   			 */

/* ============================================= */

.page-hp {
	background-color: $bg;
	// .site-container {
	 	// @include loading(1.5s);
	// }
}
.hp-mod {
	// Make room for weather or mobile ad
	padding-top: 45px;
	@include mq($nav-break) {
		padding-top: 50px;
	}
	@include mq($leaderboard) {
		padding-top: 0;
	}
	@include mq(max, $break-lg) {
		padding-top: 0;
	}
	.search-active & {
		@include mq($label-break) {
			 // extra room necessary for weather/ad on tablets
			padding-top: 110px;
		}
		@include mq($leaderboard) {
			padding-top: 69px;
		}
	}
}

//
// Ads
//

.hp-big-1 {
	display: block;
	margin: 20px auto;
	width: 300px;
	@include mq($sidebar-break) {
		margin: 0;
	}
}



/* ============================================= */

/*	Errors						   			 	 */

/* ============================================= */

.page-error-hgroup {
	text-align: center;
	margin-top: -30px;
	@include mq($leaderboard) {
		margin-top: 0;
		padding: 50px 0 70px;
	}
}

.page-error-h {
	@include sans(em(48), 300);
	color: #000;
	margin-bottom: 10px;

	@include mq(600px) {
		font-size: em(69);
	}
}

.page-error-deck {
	@include sans(em(21)/120%, 300, italic);
	margin-bottom: 10px;

	@include mq(600px) {
		font-size: em(28);
	}

	a {
		@include link;
	}

	.break {
		@include mq($article-lg) {
			display: block;
		}
	}
}


