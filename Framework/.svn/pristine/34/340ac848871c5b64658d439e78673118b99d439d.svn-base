/*  
* SCSS for Boston.com User Profile Pages
*   = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = 
*/ 
//adding a line to for compression to take place
@import "partials/variables";

.user-profile {
  font-size: 1.15385em;
  line-height: 135%;
  .profile-image {
    float: left;
    margin-right: 20px;
    border: 1px solid $black-15;
  }
}

/*  --------------------------------------------------------------------------
* Profile Head
*/
.profile-head {
  .username {
    overflow: hidden;
    padding-bottom: 5px;
    margin-bottom: 25px;
  }
  .gender-location {
    margin-bottom: 10px;
  }
  .recommend {
    margin-left: 20px;
    position: relative;
    top: 7px;
  }
  /* Profile Actions */
  .profile-actions {
    li {
      margin-bottom: 10px;
      a.box {
        margin-top: 10px;
      }
      a.report, a.unignore-user, a.ignore-user {
        color: $blue;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
}
/*  --------------------------------------------------------------------------
* Profile Nav
*/
.profile-nav {
  padding-top: 30px;
  margin-bottom: 20px;
  border-bottom: 1px solid $black-15;
  overflow: hidden;
  clear: both;
  li {
    float: left;
    &:last-child a {
      border-right: 1px solid $black-15;
    }
  }
  a {
    display: block;
    font-size: 0.7em;
    padding: 3px 5px;
    color: #666666;
    border-left: 1px solid $black-15;
    border-top: 1px solid $black-15;
    border-bottom: none;
    background: #fff;
    &:hover {
      color: #000;
      text-decoration: none;
    }
    &:active {
      padding-bottom: 7px;
      position: relative;
      top: 1px; 
    }
  }
  li.active {
    border-top: 3px solid $red;
    a {
      padding-top: 0;
      color: #000;
    }
  }
}
@media screen and (min-width: 400px){
  .profile-nav {
    li {
      margin-right: 3px;
    }
    a {
      font-size: .8em;
      padding: 4px 7px;
      border: 1px solid $black-15;
      border-bottom: none;
      &:active {
        padding-bottom: 7px; 
      }
    }
    li.active {
      a {
        padding-top: 1px;
      }
    }
  }
}

@media screen and (min-width: 445px){
  .profile-nav {
    a {
      font-size: 1em;
      padding: 4px 7px;
    }
  }
}

@media screen and (min-width: 530px){
  .profile-nav {
    li {
      margin-right: 5px;
    }
    a {
      padding: 8px 14px;
      border: 1px solid $black-15;
      border-bottom: none;
    }
    li.active {
      a {
        padding-top: 5px;
      }
    }
  }
}

/*  --------------------------------------------------------------------------
* Profile Body
*/
.profile-body {
  margin-bottom: 20px;
  li {
    border-bottom: 1px solid $black-15;
    margin-bottom: 15px;
    padding-bottom: 15px;
    overflow: auto;
  }
  .title {
    font-size: 16px;
    font-weight: 500;
  }
  .timestamp {
    color: $black-50;
    margin-bottom: 5px
  }
  a {
    color: #0d5799;
    &:hover {
      text-decoration: underline;
    }
    &.btn-light {
      color: $black-50;
      &:hover {
        text-decoration: none;
      }
    }
  }
  .comment {
    font-size: 1.15385em;
    line-height: 135%;
  }
  /* Messages */
  .messages .profile-image {
    width: 60px;
  }
  .message {
    float: left;
    div {
      padding-top: 5px;
      padding-bottom: 5px;
      p {
        padding-bottom: 8px;
      }
    }
  }
  .user-actions,
  .admin-actions {
    display: inline-block;
    zoom: 1;
    *display: inline;
    a {
      color: #999999;
    }
  }
  .admin-actions {
    margin-left: 10px;
  }
  .user-actions li,
  .admin-actions li {
    margin: 0;
    padding: 0;
    border: 0;
  }
  /* Forms */
  label {
    display: block;
    clear: both;
    margin-bottom: 5px;
    font-weight: 500;
  }
  .inline label {
    float: left;
    display: inline-block;
    margin-right: 10px;
  }
  .inline span {
    margin-right: 10px;
  }
  input[type=text] {
    width: 100%;
    padding: 1%;
    border: 1px solid $black-15;
    font-family: $sans;
  }
  input[type=radio] {
    vertical-align: inherit;
  }
  textarea {
    width: 100%;
    height: 140px;
    padding: 1%;
    border: 1px solid $black-15;
    font-family: $sans;
  }
  .add-content-head {
    margin-bottom: 20px
  }
  .intro {
    margin-bottom: 20px;
  }
  .form-section {
    margin-bottom: 20px;
  }
  .validation.req {
    color: $red;
    margin-left: 15px;
    display: none;
  }
}

// /*  --------------------------------------------------------------------------
// * Edit Avatar Section
// */
#edit-avatar-form {
  .user-avatar.current {
    float: left;
    margin-right: 20px;
    width: 55px;
  }
  .use-stock {
    padding-top: 10px;
  }
  /* Avatar List */
  .avatar-list {
    padding-top: 10px;
    clear: both;
    li {
      width: 57px;
      float: left;
      margin-right: 8px;
      margin-bottom: 0;
      padding-bottom: 10px;
      text-align: center;
      border-bottom: none;
    }
    img {
      display: block;
      cursor: pointer;
      width: 55px;
      height: 55px;
      border: 1px solid #666;
    }
    label {
      display: block;
      float: none;
      width: 57px;
      padding-right: 0;
      padding-top: 0;
      font-weight: 500;
      text-align: left;
    }
  }
}

/*  --------------------------------------------------------------------------
* Profile Sidebar
*/
.widget {
  padding: 10px;
  margin-bottom: 20px;
  background: #fff;
  border-bottom: 1px solid $black-15;
  li {
    border-bottom: 1px solid $black-10;
    margin-bottom: 8px;
    padding-bottom: 8px;
    line-height: 16px;
    overflow: hidden;
    &:last-child {
      border-bottom: none;  
    }
  }
  a {
    color: #0d5799;
  }
  /* Recently Commented */
  .forum-credit {
    color: $black-50;
  }
  .forum-credit a {
    font-weight: 400;  
  }
  /* Recently Updated */
  img {
    width: 42px;
    height: 42px;
    border: 1px solid $black-15;
    float: left;
    margin-right: 5px;
  }
  div.timestamp {
    font-size: 0.8em;
    color: $black-50;
  }
  /* Most Commented */
  &.most-commented a {
    font-weight: 400;  
  }
}
/* 
================================================================================
  Status Message
================================================================================ 
*/
/* Status Message */
.status-message {
  width: 100%;
  text-align: center;
  position: fixed;
  top: 0;
  z-index: 10000;
  .message {
    padding: 5px 30px 7px;
    box-shadow: 0 0 5px rgba(0,0,0, .8);
    font-size: 16px;
    color: #fff;
    text-shadow: 0 1px 0 rgba(0,0,0, .8);
    /* */
    -webkit-border-bottom-right-radius: 3px;
    -webkit-border-bottom-left-radius: 3px;
    -moz-border-radius-bottomright: 3px;
    -moz-border-radius-bottomleft: 3px;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
    &.action {
      background: #2851A2;
      border: 1px solid #172f5e;
      border-top: none;
      display: inline-block;
    }
    &.success {
      background: $blue;
      border: 1px solid $blue-drk;
      border-top: none;
      display: inline-block;
    }
    &.error {
      background: $red;
      border: 1px solid $red-drk;
      border-top: none;
      display: inline-block;
    }
    &.maintenance {
      background: #faefa6;
      border: 1px solid #c9b00b;
      border-top: none;
      display: inline-block;
      color: #333;
      text-shadow: none;
    }
  }
}

/*  --------------------------------------------------------------------------
* Profile Modal
*/
.ugc-modal {
  z-index: 999;
  position: fixed;
  top: 90px;
  left: 25%;
  width: 50%;
  padding: 20px;
  padding-bottom: 10px;
  background: #fff;
  border: 3px solid #2494e3;
  box-shadow: 0 0 50px rgba(0,0,0, .5);
  .heading {
    font-size: 16px;
    border-bottom: 1px solid $black-15;
    margin-bottom: 10px;
    padding-bottom: 5px;
  }
  .form-section {
    margin-bottom: 10px;
    overflow: hidden;
    padding-bottom: 0;
  }
  label {
    display: inline-block;
    width: 100px; 
  }
  &.abuse label {
    display: block;
    width: 100%;
    margin-bottom: 3px; 
  }
  input[type=text],
  textarea {
    width: 100%;
    padding: 3px 5px;
    border: 1px solid $black-15;
  }
  textarea {
    height: 100px;
  }
  select {
    width: 100%;
  }
  a.close-modal {
    float: right;
    font-size: 18px;
    &:hover {
      text-decoration: none;
      border-bottom: none;
    }
  }
}