/* Pagination styles */

.pagination {
  @include sans(em(12), 500);
  position: relative;
  width: 100%;
  text-align: right;
  margin-bottom: 1em;
  overflow: hidden;
  // Overrides for comments pagination
  .story-comments-mod & {
    width: auto;
    margin: 25px 0;
    ul {
      text-align: center;
    }
    @include mq(400px) {
      margin: 0px 0px 25px;
      ul {
        text-align: left;
      }
    }
  }
  ul {
    display: table;
    width: auto;
    float: right;
  }
  li {
    float: left;
    margin: 0 1px;
  }
  a, li.active {
    display: block;
    padding: 3px 6px;
    border: 1px solid $black-15;
    color: $black-50;
    text-decoration: none;
    @include trans($trans-time);
    &:hover {
      background: $black-10;
    }
  }
  li.active:hover {
    background: $blue;
  }
  .active a, li.active {
    border-color: $blue;
    color: #fff;
    cursor: default;
    background: $blue;
  }
