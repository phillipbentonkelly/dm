// NEW BDC REFACTOR CLASSES

.ad-container {
	display: none;
}

.content-module--related-links {
	display: none;
}

.content-text__blockquote__text {
	font-size: 12px;
}

.content-media,
.content-media__lead,
.content-media--inline-right {
	margin: 0 auto;
	
	figure {
		width: 50% !important;
		margin: 0 auto;
	}
}

.article-lead-art {
	width: 50% !important;
}

.content-text,
.content-text--gallery {
	display: block;
	margin-right: auto;
	margin-left: auto;
}

.content-well {
	width: 700px !important;
}

.content-gallery__slide {
	.content-text__text {
		font-size: 12px;
		clear: right;

		a:after {
			content:" (" attr(href) ") ";
			font-size: 12px;
		}

		a.content-text--gallery__next {
			display: none;
		}
	}
}

.content-byline__timestamp {
	clear: right;
}

.globe-non-enhanced-cta {
	display: none;
}

.embed-container {
	display: none;
}

.content-footer__tagline {
	display: none;
}

.content-module--trending {
	display: none !important;
}

.content-module__list--trending,
.content-gallery-controls__preview {
	display: none !important;
}

.content-gallery-controls__pager-info,
.content-gallery-controls__pager-controls {
	display: none;
}

.content-social-bar {
	display: none;
}

.content-header__ui li {
	display: none !important;
}

.content-header__section-name {
	display: none !important;
}

.content-well--sidebar {
	display: none !important;
}

.social-nav--horizontal {
	display: none;
}

.user-panel, .masthead {
	display: none;
}